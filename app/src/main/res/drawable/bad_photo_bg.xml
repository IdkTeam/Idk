<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_focused="true"
        android:state_pressed="true"
        >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >

            <solid
                android:color="#fc0f36"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
            <stroke
                android:width="0.5dp"
                android:color="#878787"
                />
        </shape>
    </item>

    <item
        android:state_focused="false"
        android:state_pressed="true"
        >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >

            <solid
                android:color="#ec6279"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
            <stroke
                android:width="0.5dp"
                android:color="#757474"
                />
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >

            <solid
                android:color="#fc0f36"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
            <stroke
                android:width="0.5dp"
                android:color="#878787"
                />
        </shape>
    </item>
</selector>
